@if(item is not null)
{
    <MudTimelineItem Color="color" Elevation="25">
            <ItemContent>
                <MudCard Outlined="true" Elevation="25">
                <MudCardContent>
                    <MudText Color="color" Typo="Typo.h6" GutterBottom="true">@item.Name</MudText>
                    <MudText Color="color" Typo="Typo.subtitle1">@item.Year</MudText>
                    <MudText Typo="Typo.body1" Class="py-2"><strong>@item.Company</strong></MudText>
                    <MudText Typo="Typo.body2">@item.Description</MudText>
                </MudCardContent>
                </MudCard>
            </ItemContent>
    </MudTimelineItem>
}


@code {
    [Parameter]
    public ResumeItem? item {get; set;}
    
    [Parameter]
    public MudBlazor.Color color {get; set;}
}
